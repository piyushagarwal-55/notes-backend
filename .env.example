# Environment template file for backend
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/notebook
# For production, use MongoDB Atlas or your remote database URL
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/notebook

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Cookie Configuration
COOKIE_EXPIRE=7

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000
# For production, set this to your frontend domain
# FRONTEND_URL=https://your-frontend-domain.com
